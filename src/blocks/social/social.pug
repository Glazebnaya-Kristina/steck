//- Все примеси в этом файле должны начинаться c имени блока (social)

mixin social(mods)

  //- Принимает:
  //-   mods  {string} - список модификаторов

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
      allMods = allMods + ' social--' + modsList[i].trim();
      }
    }

  ul.social(class=allMods)&attributes(attributes)
    block


mixin social-item(text, href, iconName, mods)

  //- Принимает:
  //-   text   {string} - содержимое пункта
  //-   href   {string} - ссылка этого пункта (если пустая, то это не ссылка, а span)
  //-   mods   {string} - список модификаторов

  //- Вызов:
    +social()
      +social-item('Главная', '/home')
      +social-item('Услуги', '/services')
      +social-item('Стриптиз')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
      allMods = allMods + ' social__link--' + modsList[i].trim();
      }
    }

  li.social__item
    a.social__link(class=allMods)&attributes(attributes)(href=href, target='_blank')
      span.social__name!= text
      svg.social__icon
        use(xlink:href='icons/sprite.svg#icon-' + iconName)

