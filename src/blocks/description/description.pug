//- Все примеси в этом файле должны начинаться c имени блока (description)

mixin description(text, mods)

  //- Принимает:
  //-   text    {string} - текст кнопки
  //-   mods  {string} - список модификаторов
  //- Вызов:
        +title('Кнопка-ссылка', 'mods')
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
      allMods = allMods + ' description--' + modsList[i].trim();
      }
    }

  p.description(class=allMods)&attributes(attributes)!= text
    block